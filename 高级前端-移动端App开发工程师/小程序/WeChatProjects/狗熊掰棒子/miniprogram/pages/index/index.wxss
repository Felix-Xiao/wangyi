@import "../common/index.wxss";

.index-hd {
  padding: 80rpx;
  text-align: center;
  background-color: black;
}

.weui-search-bar {
  padding: 8px 16px 8px;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result .weui-cell__bd {
  padding: 2px 0 2px 20px;
  color: #666;
}

.searchbar-result:before {
  display: none;
}

.index-version {
  color: white;
  font-size: 20rpx;
  display: inline;
}

.index-bd {
  padding: 20rpx 30rpx 40rpx;
}

.kind-list-item {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 4rpx;
  overflow: hidden;
}

.kind-list-item-hd {
  padding: 10rpx 10rpx 10rpx 10rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.3s;
}

.navigator {
  padding: 15rpx 20rpx;
  display: block;
}

.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}

.navigator-title {
  display: inline;
}

.navigator-title-text {
  font-size: 28rpx;
}

.navigator-description {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: rgb(104, 100, 100);
}
